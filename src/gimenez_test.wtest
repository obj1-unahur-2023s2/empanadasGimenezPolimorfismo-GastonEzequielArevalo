import duenio.*
import empleados.*

describe "Test de Galvan"{
	
	test "Tiene que tener de deuda 4000" {
		
		galvan.gastar(40000)
		
		assert.equals(-40000,galvan.totalDeuda())
	}
	
	test "El total de dinero debe ser 0"{
		galvan.gastar(40000)
		
		assert.equals(0,galvan.totalDinero())
	}
	
	test "La Deuda de galvan tiene que ser de 12000"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		assert.equals(-120000,galvan.totalDeuda())	
	}
	
	test "Total de dinero debe ser 0"{
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		assert.equals(0,galvan.totalDinero())	
	}
	
	test "Total de deuda debe ser 0"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		galvan.cobrarSueldo(150000)
		
		assert.equals(0,galvan.totalDeuda())
	}
	
	test "Total dinero debe ser 30000"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		galvan.cobrarSueldo(150000)
		
		assert.equals(30000,galvan.totalDinero())
	}
	
	test "Total deuda debe ser 220000"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		galvan.cobrarSueldo(150000)
		
		galvan.gastar(250000)
		
		assert.equals(-220000,galvan.totalDeuda())
	}
	
	test "Total del dinero de galvan debe ser 0"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		galvan.cobrarSueldo(150000)
		
		galvan.gastar(250000)
		
		assert.equals(0,galvan.totalDinero())
	}
	
	test "Total deuda debe ser 70000"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		galvan.cobrarSueldo(150000)
		
		galvan.gastar(250000)
		
		galvan.cobrarSueldo(150000)
		
		assert.equals(-70000,galvan.totalDeuda())
	}
	
	test "Total dinero debe ser 0"{
		
		galvan.gastar(40000)
		
		galvan.gastar(80000)
		
		galvan.cobrarSueldo(150000)
		
		galvan.gastar(250000)
		
		galvan.cobrarSueldo(150000)
		
		assert.equals(0,galvan.totalDinero())
	}
	
	
	
	
}